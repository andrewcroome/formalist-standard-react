@value styles: 'formalist-theme/theme/index.mcss';
@value highlight: highlight from styles;
@value highlightLight: highlightLight from styles;
@value highlightDark: highlightDark from styles;
@value greyTint: greyTint from styles;

.base {
  composes: base from '../shared.mcss';
}
  .baseInline {
    composes: baseInline from '../shared.mcss';
  }

.field {
  position: relative;
}

.message {
  padding-right: 3rem;
  position: relative;
  z-index: 1;
}

.result,
.progress {
  composes: sans normal from styles;
  box-sizing: border-box;
  cursor: pointer;
  display: block;
  left: 0;
  overflow: hidden;
  padding: 20px;
  position: absolute;
  text-align: left;
  top: 0;
  width: 100%;
  z-index: 10;
}

.result {
  composes: greyTint greyTintBackground from styles;
  font-size: 1.1em;
  line-height: 1.5;
}

.percentage {
  float: right;
}

.previewItems {
  background: greyTint;
  color: #fff;
  margin-bottom: 5px;
}

.uploadedItems {
  composes: greyMidColor greyTintBackground from styles;
  position: relative;
  z-index: 5;
}

.listItem {
  composes: greyLightColor from styles;
  composes: small sans from styles;
  border-top: 1px solid #fff;
  box-sizing: border-box;
  padding: 5px;
  position: relative;
  width: 100%;
}

.listItem__img {
  display: table-cell;
  margin-top: -2px;
  position: relative;
}

.listItem__img img {
  background-color: #fff;
  box-shadow: 0 2px 2px 0px rgba(0,0,0,0.08);
  box-sizing: border-box;
  display: inline-block;
  height: 40px;
  margin-right: 20px;
  padding: 2px;
  width: auto;
  position: relative;
  z-index: 2;
}

.listItem__title {
  composes: lineHeightNormal from styles;
  position: absolute;
  top: 50%;
  left: 80px;
  transform: translateY(-50%);
  white-space: nowrap;
  overflow: hidden;
}

.uploadeditem__title {
  composes: listItem__title;
  composes: highlightDarkColor from styles;
  left: 0;
}

.progress {
  color: #fff;
}

.progress_bar {
  background: highlight;
  bottom: 0;
  display: inline-block;
  left: 0;
  position: absolute;
  top: 0;
  transition: width 1s ease-in-out;
  width: 0;
  z-index: 1;
  overflow: hidden;
}

.progress__title {
  composes: listItem__title;
  color: #fff;
}

.validationMessages {}

.validationMessage {
  composes: errorColor errorLightBackground from styles;
  margin-bottom: 5px;
  padding: 8px 30px 8px 8px;
  position: relative;
  z-index: 1;
}

.remove {
  composes: primaryColor from styles;
  appearance: none;
  background-color: transparent;
  border: none;
  cursor: pointer;
  padding: 1rem;
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  transition-duration: 100ms;
  transition-property: color;
  z-index: 2;
}

.remove:focus,
.remove:hover {
  color: error;
}

.removeText {
  display: none;
}

.removeX {
  composes: fallback large from styles;
}

.removeX:hover {
  color: error;
}
