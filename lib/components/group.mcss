@value styles: './ui/styles.mcss';
@value breakpointSmall from styles;

.group {
  display: flex;
}

.item {
  flex: 1;
  margin-left: 1rem;
  margin-right: 1rem;
}
  .item:first-child {
    margin-left: 0;
  }
  .item:last-child {
    margin-right: 0;
  }


@media breakpointSmall {
  .group {
    display: block;
  }
  .item {
    margin-left: 0;
    margin-right: 0;
  }
}
