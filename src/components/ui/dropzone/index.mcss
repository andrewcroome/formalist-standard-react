@value styles: 'formalist-theme/theme/index.mcss';
@value highlight: highlight from styles;
@value highlightLight: highlightLight from styles;
@value highlightDark: highlightDark from styles;
@value greyLight: greyLight from styles;
@value greyTint: greyTint from styles;

.dropzone {
  composes: greyLightColor from styles;
  composes: small sans from styles;
  cursor: pointer;
  min-height: 66px;
  position: relative;
  width: 100%;
  z-index: 0;
}

.dropzone:before {
  background: none;
  border: 2px dashed greyTint;
  bottom: -2px;
  box-sizing: border-box;
  content: "";
  display: block;
  left: -2px;
  right: -2px;
  position: absolute;
  top: -2px;
  z-index: 0;
}

.dropzone:hover,
.dropzone__highlight {
  background: highlightLight;
}

.dropzone:hover:before,
.dropzone__highlight:before {
  border-color: highlight;
}

.dropzone__button {
  composes: small buttonHighlight from '../../ui/buttons.mcss';
  position: absolute;
  right: 0;
  top: -10px;
}

.dropzone__label {
  composes: greyLightColor from styles;
  left: 50%;
  position: absolute;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 10;
}

.dropzone:hover .dropzone__label,
.dropzone__highlight .dropzone__label {
  color: highlight;
}
