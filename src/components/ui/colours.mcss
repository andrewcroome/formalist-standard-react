/* Greys */

@value greyLight: #ccc;
@value greyTint: #f1f1f1;

.greyLightColor {
  color: greyLight;
}

.greyLightBackground {
  background-color: greyLight;
}

.greyLightBorder {
  border-color: greyLight;
}

.greyTintBackground {
  background-color: greyTint;
}

