@value styles: 'formalist-theme/theme/index.mcss';

.base {
  composes: inputBox from '../../ui/input-boxes.mcss';
  display: flex;
  padding: 0;
}

.gutter {
  border-right: 1px solid #ccc;
  position: relative;
  width: 5rem;
}

.content {
  padding: 2rem 2rem 1rem;
  flex: 1;
}

.contentPlaceholder--unordered-list-item :global(.public-DraftEditorPlaceholder-root),
.contentPlaceholder--ordered-list-item :global(.public-DraftEditorPlaceholder-root) {
  margin-left: 1.5em;
}
.contentPlaceholder--header-one :global(.public-DraftEditorPlaceholder-root) {
  margin-top: 0.2em;
}
