@value styles: 'formalist-theme/theme/index.mcss';

.base {}

/* Time picker */

.button {
  composes: small sans greyTintBorder whiteBackground from styles;
  appearance: none;
  border-style: solid;
  border-width: 0;
  border-bottom-width: 1px;
  cursor: pointer;
  display: block;
  padding: 0.5rem 1rem;
  width: 100%;
}
  .button:hover {
    text-decoration: underline;
  }

.buttonActive {
  composes: highlightLightBackground from styles;
}
